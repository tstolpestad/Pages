{
    "name": "client",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "NODE_ENV=development next",
        "build": "next build",
        "start": "NODE_ENV=production next start",
        "test": "jest --coverage --bail",
        "test:watch": "jest --watch",
        "lint": "stylelint './**/*.css' & xo",
        "fix": "xo --fix & stylelint './**/*.css' --fix",
        "deploy": "now",
        "alias": "now alias"
    },
    "dependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "enzyme": "^3.8.0",
        "enzyme-to-json": "^3.3.5",
        "next": "^7.0.2",
        "react": "16.7.0-alpha.0",
        "react-beautiful-dnd": "^10.0.3",
        "react-dom": "16.7.0-alpha.0",
        "regenerator-runtime": "^0.13.1"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@babel/preset-react": "^7.0.0",
        "@zeit/next-css": "^1.0.1",
        "babel-eslint": "^10.0.1",
        "babel-preset-stage-2": "^6.24.1",
        "cssnano": "^4.1.7",
        "enzyme-adapter-react-16": "^1.7.1",
        "eslint-config-amphibian": "^1.1.3",
        "eslint-config-xo-react": "^0.17.0",
        "eslint-plugin-react": "^7.11.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^23.6.0",
        "postcss-preset-env": "^6.3.0",
        "react-test-renderer": "16.7.0-alpha.0",
        "stylelint": "^9.9.0",
        "stylelint-config-amphibian": "^1.0.3",
        "xo": "^0.23.0"
    },
    "xo": {
        "parser": "babel-eslint",
        "extends": [
            "eslint-config-amphibian",
            "eslint-config-xo-react"
        ],
        "overrides": [
            {
                "files": "__tests__/**/*.js",
                "globals": [
                    "test",
                    "expect"
                ]
            }
        ]
    },
    "stylelint": {
        "extends": [
            "stylelint-config-amphibian"
        ],
        "ignoreFiles": [
            "./coverage/**/*",
            "./.next/**/*",
            "./node_modules/**/*"
        ]
    },
    "jest": {
        "setupFiles": [
            "./setup/setupTests.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy",
            "\\.(gif|ttf|eot|svg)$": "./__mocks__/fileMock.js"
        }
    }
}
